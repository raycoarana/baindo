<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raycoarana.baindo.sample">

    <application
        android:name=".app.SampleApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity android:name=".main.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".click.view.ClickActivity" />
        <activity android:name=".text.view.TextActivity" />
        <activity android:name=".check.view.CheckActivity" />
        <activity android:name=".progress.view.ProgressActivity" />
        <activity android:name=".uiaction.view.UIActionActivity" />
        <activity android:name=".adapter.staticitems.view.StaticItemsActivity" />
        <activity android:name=".adapter.dynamicitems.view.DynamicItemsActivity" />
        <activity android:name=".intent.view.IntentLauncherActivity" />
        <activity android:name=".intent.view.IntentReceiverActivity" />
        <activity android:name=".state.view.StateActivity" />

    </application>

</manifest>
